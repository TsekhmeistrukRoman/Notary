<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:background="@drawable/item_note_background">

    <ImageView
        android:id="@+id/note_color"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/red_drawable" />

    <TextView
        android:id="@+id/note_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/note_color"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Test test test test test"
        android:textColor="@color/colorBlack"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="18.01.2018"
        android:textColor="@color/colorGray"
        android:textSize="16sp" />
</RelativeLayout>
